<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.youren.bbs.mapper.FabulousMapper">

    <insert id="create" parameterType="Fabulous">
		insert into t_fabulous(pid,uid)
		values(#{pid},#{uid})
	</insert>

	<delete id="delete" parameterType="Fabulous">
		delete from t_fabulous where pid=#{pid} and uid=#{uid}
	</delete>

	<select id="findByPidUid"  resultType="Fabulous">
		select pid,uid from t_fabulous where pid=#{pid} and uid=#{uid}
	</select>

</mapper>