<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.youren.bbs.mapper.FabulousMapper">

    <insert id="create" parameterType="Fabulous" useGeneratedKeys="true" keyProperty="id">
		insert into t_fabulous(pid,uid)
		values(#{pid},#{uid})
	</insert>

	<delete id="delete" parameterType="Long">
		delete from t_fabulous where id=#{id}
	</delete>

	<select id="findByPidUid"  resultType="Fabulous">
		select id,pid,uid from t_category where pid=#{pid} and uid=#{uid}
	</select>

</mapper>