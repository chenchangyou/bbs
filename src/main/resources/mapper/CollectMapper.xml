<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.youren.bbs.mapper.CollectMapper">
    <insert id="create" parameterType="Collect">
		insert into t_collect(pid,uid,create_time)
		values(#{pid},#{uid},#{createTime})
	</insert>

	<delete id="delete" parameterType="Collect">
		delete from t_collect where pid=#{pid} and uid=#{uid}
	</delete>

	<select id="findByPidUid"  resultType="Collect" parameterType="Long">
		select pid,uid from t_collect where pid=#{pid} and uid=#{uid}
	</select>

	<select id="findBypid"  resultType="Collect" parameterType="Long">
		select * from t_collect where pid=#{pid};
	</select>

	<select id="findnumber"  resultType="Integer"  parameterType="Long">
		select count(*) counts from t_Collect where pid=#{pid};
	</select>

</mapper>